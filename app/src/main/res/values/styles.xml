            </style>

            <style name="click">
                <item name="android:text">@string/click_here</item>
                <item name="android:textSize">@dimen/list_song</item>
                <item name="android:textColor">@color/list_song_color</item>
                <item name="android:textStyle">italic</item>

            </style>

            <style name="contact">
                <item name="android:text">@string/contact</item>
                <item name="android:textSize">@dimen/list_song</item>
                <item name="android:textColor">@color/list_song_color</item>
                <item name="android:textStyle">italic</item>

            </style>



</resources>
